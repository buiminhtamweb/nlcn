<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_smoke"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@color/white_smoke" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="USER SETTTING" />
        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white">


            <TextView
                android:id="@+id/tv_giohang"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_backround_user"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="72dp"
                android:text="Đơn hàng đang xử lý"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_local_grocery_store_white_smoke_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_giohang"
                app:layout_constraintStart_toStartOf="@+id/tv_giohang"
                app:layout_constraintTop_toTopOf="@+id/tv_giohang" />


            <TextView
                android:id="@+id/tv_ls_dathang"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_backround_user"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="72dp"
                android:text="Lịch sử đặt hàng"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_giohang" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_history_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_ls_dathang"
                app:layout_constraintStart_toStartOf="@+id/tv_ls_dathang"
                app:layout_constraintTop_toTopOf="@+id/tv_ls_dathang" />


            <TextView
                android:background="@drawable/button_backround_user"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_caidat"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:paddingStart="72dp"
                android:text="Cài đặt tài khoản"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ls_dathang" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_settings_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_caidat"
                app:layout_constraintStart_toStartOf="@+id/tv_caidat"
                app:layout_constraintTop_toTopOf="@+id/tv_caidat" />


            <TextView
                android:background="@drawable/button_backround_user"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_dangxuat"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:paddingStart="72dp"
                android:text="Đăng xuất"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_caidat" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_exit_to_app_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dangxuat"
                app:layout_constraintStart_toStartOf="@+id/tv_dangxuat"
                app:layout_constraintTop_toTopOf="@+id/tv_dangxuat" />


            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_smoke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dangxuat" />


            <TextView
                android:id="@+id/tv_phanhoi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/button_backround_user"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="72dp"
                android:text="Phản hồi"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_feedback_black_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phanhoi"
                app:layout_constraintStart_toStartOf="@+id/tv_phanhoi"
                app:layout_constraintTop_toTopOf="@+id/tv_phanhoi" />


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</ScrollView>