<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Cập nhật tài khoản"
            app:titleTextColor="@color/white">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_anhdaidien"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:src="@color/white_smoke" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="Cập nhật ảnh đại diện" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <LinearLayout

            android:id="@+id/linearlayout_tk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Họ tên"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_hoten"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="Bui Minh Tam"
                android:textAllCaps="false"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Mật khẩu"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_matkhau"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Thay đổi mật khẩu"
                android:textAllCaps="false"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Năm sinh"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_namsinh"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="1995-09-29"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:text="Giới tính"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_gioitinh"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Không rõ"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Số điện thoại"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_sdt"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="09090900909"
                android:textAllCaps="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="Địa chỉ"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/btn_td_diachi"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backround_btn_acc_set"
                android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="left|center_vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:text="Cần Thơ"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>